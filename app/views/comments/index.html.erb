<p><a href="/events/<%= @event.user_id %>">Events Dashboard</a> | <a href="/sessions/logout">Log out</a></p>

<h1><%= @event.name %></h1>
<h3>Host: <%= @event.user.first_name %> <%= @event.user.last_name %></h3>
<h3>Date: <%= @event.date %></h3>
<h3>Location: <%= @event.location %>, <%= @event.state %></h3>
<p>People who are joining the event: <%= @event.attends.count %></p>

<table>
	<th>
		<tr>
			<th>Name</th>
			<th>Location</th>
			<th>State</th>
		</tr>
	</th>
	<tbody>
	<% @attends.each do |a| %>
		<tr>
			<td><%= a.user.first_name %> <%= a.user.last_name %></td>
			<td><%= a.user.city %></td>
			<td><%= a.user.state %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<p>Discussion about this event:</p>
<div id="comments">
<% @comments.each do |c| %>
	<p><%= c.user.first_name%> says: <%= c.comment %></p>
	<p>.............................</p>
	<% end %>
</div>

<form action="/comments" method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<input type="hidden" name="event_id" value="<%= @event.id %>">
	<p><label>Add Comment:</label></p>
	<p><textarea name="comment"></textarea></p>
	<input type="submit" value="Submit Comments">
</form>




<p><a href="/users/<%= @user.id %>">Edit My Profile</a> | <a href="/sessions/logout">Log out</a></p>
<h1>Welcome <%= @user.first_name%></h1>
<h2>Here are some of the events at your state:</h2>

<table>
	<th>
		<tr>
			<th>Name</th>
			<th>Date</th>
			<th>Location</th>
			<th>Host</th>
			<th>Action/Status</th>
		</tr>
	</th>
	<% @events.each do |e| %>
	<tbody>
		<tr>
			<td><a href="/comments/<%= e.id %>"><%= e.name%></a></td>
			<td><%= e.date%></td>
			<td><%= e.state%></td>
			<td><%= e.user.first_name%></td>
			<% if e.user_id == session[:user_id] %>
			<td><a href="">Delete</a> | <a href="">Edit</a></td>
			<% elsif %>
				<td>
					<form action="/events/attend" method="post">
						<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
						<input type="hidden" name="event_id" value="<%= e.id %>">
						<input type="hidden" name="user_id" value="<%= @user.id %>">
						<input type="submit" value="Join">
					</form>
				</td>
			<% else %>
				<td><a href="">Cancel</a></td>
 			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>

